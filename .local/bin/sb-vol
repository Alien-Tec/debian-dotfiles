#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

case $BLOCK_BUTTON in
	1) pamixer -t ;;
	2) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
    - Left click to mute.
    - Right click to open pulsemixer.
    - Scroll up and down to change volume." ;;
	# 3) setsid -f "$TERMINAL" -e pulsemixer ;;
	3) st -c float-st -g 95x28 pulsemixer ;;
	4) pamixer --allow-boost -i 1 ;;
	5) pamixer --allow-boost -d 1 ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

[ $(pamixer --get-mute) = true ] && echo ðŸ”‡ && exit

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "70" ]; then
	icon="ðŸ”Š"
elif [ "$vol" -gt "30" ]; then
	icon="ðŸ”‰"
elif [ "$vol" -gt "0" ]; then
	icon="ðŸ”ˆ"
else
        echo ðŸ”‡ && exit
fi

echo "$icon$vol%"
