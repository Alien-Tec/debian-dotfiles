#!/bin/bash
#Descriptions:

chosen=$(printf "ğŸ”’ Lock\nğŸ”ƒ Reboot\nğŸ“´ Power Off\nğŸ’¤ Suspend\nğŸšª Log Out\nğŸ“º Display Off" | rofi -dmenu -i -theme-str '@import "~/.config/rofi/powermenu-bottom.rasi"')

case "$chosen" in
  "ğŸ”’ Lock") i3lock -f -c 000000 ;;
	"ğŸ”ƒ Reboot") loginctl reboot ;;
	"ğŸ“´ Power Off") loginctl poweroff ;;
  "ğŸ’¤ Suspend") blur-lock && loginctl suspend ;;
  "ğŸšª Log Out") i3-msg exit ;;
 	"ğŸ“º Display Off") xset dpms force off ;;
	*) exit 1 ;;
esac
